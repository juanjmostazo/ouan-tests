material lensflare/bigGlow
 {
    technique
    {
        pass
        {
            ambient 1 1 1
            diffuse 1 1 1
            lighting off
            depth_write off
            scene_blend add
            texture_unit
            {
                texture big_glow.jpg
            }
        }
    }
 }
